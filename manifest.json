{	
	"manifest_version": 3,
	"name": "yomichan",
	"version": "1.1.0",
	"description": "選択したテキストにふりがなを付ける",
	"icons": {
		"16": "img/icon.png",
		"48": "img/icon.png",
		"128": "img/icon.png"
	},
	"action": {
		"default_icon": "img/yomichan_disable.png",
		"default_title": "選択したテキストにふりがなを付ける"
	},
	"background": {
		"service_worker": "js/background.js"
	},
	"content_scripts": [
		{
			"all_frames": true,
			"matches": [
				"<all_urls>"
			],
			"js": [
				"js/yomichanContent.js"
			],
			"css": [
				"css/style.css"
			],
			"run_at": "document_start"
		}
	],
	"permissions": [
		"storage"
	],
	"homepage_url": "https://github.com/guoweihua1982/yomichan",
	"omnibox": {
		"keyword": "yomi"
	},
	"web_accessible_resources": [
		{
			"resources": [
				"img/shrinkButton.png",
				"img/settingButton.png",
				"img/icon.png"
			],
			"matches": [
				"<all_urls>"
			]
		}
	]
}
